{
  "name": "SpringType DevTools for Chrome",
  "version": "1.0.0",
  "description": "SpringType DevTools for Chrome",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background-main.js",
      "background-runtime.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "chrome_style": true,
    "page": "index.html?page=option"
  },
  "incognito": "spanning",
  "page_action": {
    "default_popup": "index.html?page=popup",
    "default_icon": {
      "16": "assets/icon_16.png",
      "32": "assets/icon_32.png",
      "48": "assets/icon_48.png",
      "128": "assets/icon_128.png"
    }
  },
  "icons": {
    "16": "assets/icon_16.png",
    "32": "assets/icon_32.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "manifest_version": 2
}
